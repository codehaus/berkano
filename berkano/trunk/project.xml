    <developers>
        <developer>
            <name>Gregory Joseph</name>
            <id>gjoseph</id>
            <email>gjoseph AT codehaus.org</email>
            <organization></organization>
            <roles>
                <role>Project admin</role>
                <role>Developer</role>
            </roles>
            <timezone>0</timezone>
        </developer>
    </developers>

    <dependencies>
    </dependencies>

    <build>
        <sourceDirectory>src/java</sourceDirectory>

        <unitTestSourceDirectory>src/test</unitTestSourceDirectory>
        <unitTest>
            <includes>
                <include>**/*Test.java</include>
                <include>**/*Test.class</include><!-- this is needed if we use maven.test.search.classdir=true -->
            </includes>
            <resources>
                <resource>
                    <directory>${basedir}/src/test</directory>
                    <includes>
                        <include>**/*.properties</include>
                        <include>**/*.xml</include>
                        <include>**/*.vm</include>
                        <include>**/*.ftm</include>
                    </includes>
                </resource>
            </resources>
        </unitTest>
    </build>

    <reports>
        <report>maven-license-plugin</report>
        <!--
        <report>maven-checkstyle-plugin</report>
