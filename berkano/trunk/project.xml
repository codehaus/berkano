    <mailingLists>
        <mailingList>
            <name>${pom.name} User mailing list</name>
            <subscribe></subscribe>
            <unsubscribe></unsubscribe>
            <archive></archive>
        </mailingList>
        <mailingList>
            <name>${pom.name} Developers mailing list</name>
            <subscribe></subscribe>
            <unsubscribe></unsubscribe>
            <archive></archive>
        </mailingList>
        <mailingList>
            <name>${pom.name} Announcements mailing list</name>
            <subscribe></subscribe>
            <unsubscribe></unsubscribe>
            <archive></archive>
        </mailingList>
        <mailingList>
            <name>${pom.name} SCM and issue tracking mailing list</name>
            <subscribe></subscribe>
            <unsubscribe></unsubscribe>
            <archive></archive>
        </mailingList>
