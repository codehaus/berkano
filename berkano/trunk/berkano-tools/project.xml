<?xml version="1.0" encoding="ISO-8859-1"?>
<project>
    <pomVersion>3</pomVersion>
    <groupId>swaf-tools</groupId>
    <organization>
        <name>incongru.net</name>
        <url>http://incongru.net</url>
        <logo>http://incongru.net/images/incongru-logo.png</logo>
    </organization>
    <inceptionYear>2004</inceptionYear>
    <url>http://incongru.net/swaf-tools</url>
    <issueTrackingUrl></issueTrackingUrl>
    <siteAddress>http://incongru.net/swaf</siteAddress>
    <siteDirectory></siteDirectory>
    <distributionDirectory></distributionDirectory>
    <repository>
        <connection></connection>
        <url></url>
    </repository>

    <mailingLists>
        <mailingList>
            <name>${pom.name} User Mailing list</name>
            <subscribe></subscribe>
            <unsubscribe></unsubscribe>
            <archive></archive>
        </mailingList>
    </mailingLists>
    <developers>
        <developer>
            <name>Gregory Joseph</name>
            <id>moinsmoins</id>
            <email>moinsmoins AT incongru.net</email>
            <organization>incongru.net</organization>
            <roles>
                <role>Project admin</role>
                <role>Developer</role>
            </roles>
            <timezone>0</timezone>
        </developer>
        <!-- jeroen? -->
    </developers>

    <dependencies>

    </dependencies>

    <build>
        <sourceDirectory>src/java</sourceDirectory>

        <unitTestSourceDirectory>src/test</unitTestSourceDirectory>
        <unitTest>
            <includes>
                <include>**/*Test.java</include>
                <include>**/*Test.class</include><!-- this is needed if we use maven.test.search.classdir=true -->                
            </includes>
               <resources>
                <resource>
                    <directory>${basedir}/src/test</directory>
                    <includes>
                        <include>**/*.properties</include>
                        <include>**/*.xml</include>
                    </includes>
                </resource>
            </resources>
        </unitTest>
    </build>

    <reports>
        <report>maven-license-plugin</report>
        <report>maven-checkstyle-plugin</report>
        <report>maven-changes-plugin</report>
        <report>maven-javadoc-plugin</report>
        <report>maven-jdepend-plugin</report>
        <report>maven-pmd-plugin</report>
        <report>maven-jxr-plugin</report>
        <report>maven-junit-report-plugin</report>
        <report>maven-tasklist-plugin</report>
        <report>maven-simian-plugin</report>
        <report>maven-changelog-plugin</report>
        <report>maven-file-activity-plugin</report>
        <report>maven-developer-activity-plugin</report>
        <report>maven-statcvs-plugin</report>
        <report>maven-linkcheck-plugin</report>
    </reports>
</project>
