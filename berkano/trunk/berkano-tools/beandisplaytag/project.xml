<?xml version="1.0" encoding="ISO-8859-1"?>

<project>
    <extend>../project.xml</extend>
    <id>bean-displaytag</id>
    <currentVersion>${berkanoVersion}</currentVersion>
    <name>Bean display tag library</name>
    <description>The bean display tag library is based on an idea we've had while using displaytag(www.displaytag.org), which is basically proviving the same usage model as display tag but to help display one single instance of a bean instance of a collection, vertically instead of horizontally.</description>
    <shortDescription>Bean display tag library</shortDescription>

    <dependencies>
        <!-- tests only -->
        <dependency>
            <groupId>berkano-tags</groupId>
            <artifactId>berkano-tags-test</artifactId>
            <version>${berkanoVersion}</version>
        </dependency>

        <dependency>
            <groupId>commons-beanutils</groupId>
            <artifactId>commons-beanutils</artifactId>
            <version>1.7.0</version>
        </dependency>
        <dependency>
            <groupId>commons-collections</groupId>
            <artifactId>commons-collections</artifactId>
            <version>3.1</version>
        </dependency>
        <dependency>
            <groupId>commons-lang</groupId>
            <artifactId>commons-lang</artifactId>
            <version>2.0</version>
        </dependency>
        <dependency>
            <groupId>ognl</groupId>
            <artifactId>ognl</artifactId>
            <version>2.6.5</version>
        </dependency>
        <dependency>
            <groupId>opensymphony</groupId>
            <artifactId>xwork</artifactId>
            <version>1.0.4</version>
        </dependency>
    </dependencies>
</project>
