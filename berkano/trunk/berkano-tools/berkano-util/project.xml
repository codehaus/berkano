            <version>1.4.3</version>
        </dependency>
        <dependency>
            <groupId>hibernate</groupId>
            <artifactId>antlr</artifactId>
            <version>2.7.5H3</version>
        </dependency>
    </dependencies>

    <build>
        <sourceModifications>
            <sourceModification>
                <className>java.lang.Enum</className>
                <excludes>
                    <exclude>**/EnumType*.java</exclude>
                    <exclude>**/Sauce.java</exclude>
                    <exclude>**/Sandwich.java</exclude>
                    <exclude>**/BasicVegetable.java</exclude>
                    <exclude>**/OtherVegetable.java</exclude>
                </excludes>
            </sourceModification>
        </sourceModifications>
    </build>
    
</project>
