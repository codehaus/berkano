<project>
    <extend>../../project.xml</extend>
    <id>berkano-util</id>
    <currentVersion>${berkanoVersion}</currentVersion>
    <name>Berkano Utilities</name>
    <description>A bunch of utilities of various purposes. Please see docs for details.</description>
    <shortDescription>Berkano Utilities</shortDescription>
<package>net.incongru.util</package>
    <dependencies>
        <dependency>
            <groupId>ognl</groupId>
            <artifactId>ognl</artifactId>
            <version>2.6.5</version>
        </dependency>
        <dependency>
            <groupId>opensymphony</groupId>
            <artifactId>xwork</artifactId>
            <version>1.0.5</version>
        </dependency>
        <dependency>
            <groupId>opensymphony</groupId>
            <artifactId>sitemesh</artifactId>
