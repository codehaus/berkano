<?xml version="1.0" encoding="ISO-8859-1"?>

<project>
    <extend>../../project.xml</extend>
    <artifactId>berkano-user-mgt-webwork</artifactId>
    <currentVersion>${berkanoVersion}</currentVersion>
    <name>Berkano User Management for Webwork2</name>
    <description>A couple of simple actions and views for berkano-user/osuser with webwork2</description>
    <shortDescription>Berkano User Management for Webwork2</shortDescription>

    <dependencies>
        <dependency>
            <groupId>berkano</groupId>
            <artifactId>berkano-user</artifactId>
            <version>${berkanoVersion}</version>
            <type>jar</type>
        </dependency>
        <dependency>
            <groupId>berkano</groupId>
            <artifactId>seraph</artifactId>
            <version>0.7.7-berkano-SNAPSHOT</version>
            <type>jar</type>
        </dependency>
        <dependency>
            <groupId>berkano</groupId>
            <artifactId>berkano-seraph</artifactId>
            <version>${berkanoVersion}</version>
            <type>jar</type>
        </dependency>
        <dependency>
            <groupId>berkano</groupId>
            <artifactId>berkano-bookmarks</artifactId>
            <version>${berkanoVersion}</version>
            <type>jar</type>
        </dependency>
        <dependency>
            <groupId>opensymphony</groupId>
            <artifactId>webwork</artifactId>
            <version>2.1.7</version>
            <type>jar</type>
        </dependency>
        <dependency>
            <groupId>opensymphony</groupId>
            <artifactId>xwork</artifactId>
            <version>1.0.5</version>
            <type>jar</type>
        </dependency>

        <!-- there is a jsp Tag in here ... -->
        <dependency>
            <groupId>servletapi</groupId>
            <artifactId>servletapi</artifactId>
            <version>2.4-20040521</version>
        </dependency>
        <dependency>
            <groupId>jspapi</groupId>
            <artifactId>jsp-api</artifactId>
            <version>2.0-20040521</version>
        </dependency>

    </dependencies>

    <build>
        <resources>
            <resource>
                <directory>src/java</directory>
                <includes>
                    <include>**/*.properties</include>
                    <include>**/*.xml</include>
                </includes>
            </resource>
            <resource>
                <directory>src/resources</directory>
                <includes>
                    <include>**/*</include>
                </includes>
            </resource>
            <resource>
                <directory>src/vm</directory>
                <includes>
                    <include>**/*.vm*</include>
                </includes>
            </resource>
        </resources>
    </build>
</project>
