<?xml version="1.0" encoding="ISO-8859-1"?>

<project>
    <extend>../../project.xml</extend>
    <artifactId>berkano-user</artifactId>
    <currentVersion>${berkanoVersion}</currentVersion>
    <name>Berkano User</name>
    <description>Berkano User defines a simple API for managing users in berkano applications.</description>
    <shortDescription>Berkano User</shortDescription>

    <dependencies>
        <dependency>
            <groupId>berkano</groupId>
            <artifactId>berkano-bookmarks</artifactId>
            <version>${berkanoVersion}</version>
        </dependency>
        <dependency>
            <groupId>berkano</groupId>
            <artifactId>berkano-util</artifactId>
            <version>${berkanoVersion}</version>
        </dependency>
        <dependency>
            <groupId>berkano</groupId>
            <artifactId>seraph</artifactId>
            <version>0.7.7-berkano-SNAPSHOT</version>
            <type>jar</type>
        </dependency>
        <dependency>
            <groupId>hibernate</groupId>
            <artifactId>hibernate</artifactId>
            <version>2.1.7c</version>
        </dependency>
        <dependency>
            <groupId>commons-email</groupId>
            <artifactId>commons-email</artifactId>
            <version>SNAPSHOT</version>
        </dependency>
	<dependency>
	    <groupId>commons-codec</groupId>
	    <artifactId>commons-codec</artifactId>
            <version>1.2</version>
        </dependency>
        <dependency><!-- required by hibernate's schemaexport tool -->
            <groupId>dom4j</groupId>
            <artifactId>dom4j</artifactId>
            <version>1.5.2</version>
        </dependency>
        <dependency><!-- required by hibernate's schemaupdate tool -->
            <groupId>odmg</groupId>
            <artifactId>odmg</artifactId>
            <version>3.0</version>
        </dependency>
        <dependency><!-- for hibernate -->
            <groupId>cglib</groupId>
            <artifactId>cglib</artifactId>
            <version>2.0.2</version>
        </dependency>
        <dependency>
            <groupId>asm</groupId>
            <artifactId>asm</artifactId>
            <version>1.5.1</version>
        </dependency>
        <dependency>
            <groupId>commons-logging</groupId>
            <artifactId>commons-logging</artifactId>
            <version>1.0.4</version>
        </dependency>
        <dependency>
            <groupId>commons-lang</groupId>
            <artifactId>commons-lang</artifactId>
            <version>2.0</version>
        </dependency>
        <dependency><!-- 2.1 required by hibernate's schemaexport tool -->
            <groupId>commons-collections</groupId>
            <artifactId>commons-collections</artifactId>
            <version>3.1</version>
        </dependency>
        <dependency>
            <groupId>jta</groupId>
            <artifactId>jta</artifactId>
            <version>1.0.1B</version>
        </dependency>
        <dependency>
            <groupId>servletapi</groupId>
            <artifactId>servletapi</artifactId>
            <version>2.4-20040521</version>
        </dependency>
        <dependency>
            <groupId>xstream</groupId>
            <artifactId>xstream</artifactId>
            <version>1.0.2</version>
        </dependency>

        <dependency><!-- to build the ddl / 3.0.16-ga is available on mysql.com -->
            <groupId>mysql</groupId>
            <artifactId>mysql-connector-java</artifactId>
            <version>3.0.10-stable-bin</version>
        </dependency>

        <dependency>
            <groupId>jmock</groupId>
            <artifactId>jmock</artifactId>
            <version>1.0.1</version>
        </dependency>
    </dependencies>

    <build>
        <sourceDirectory>src/java</sourceDirectory>
        <resources>
            <resource>
                <directory>${basedir}/src/java</directory>
                <includes>
                    <include>**/*.hbm</include>
                </includes>
            </resource>
        </resources>
    </build>

</project>
